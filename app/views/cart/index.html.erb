<h1>My Cart</h1>

<% total = 0 %>
<table>
  <% @cart.each do |id, quantity| %>
      <% product = Product.find(id) %>
      <tr>
        <td><%= image_tag product.image_url, :width => 100 %></td>
        <td><%= product.title %></td>
        <td width="60"><%= quantity %></td>
        <td width="60"><%= number_to_currency product.cost, :unit => "$" %></td>
        <td width="60"><%= number_to_currency product.cost * quantity, :unit => "$" %></td>
      </tr>
      <% total += quantity * product.cost %>
  <% end %>
  <tr>
    <td colspan = "100"><b>Total Amount to be paid:</b></td>
    <td><%= number_to_currency total, :unit => "$"%></td>
<%= button_to "Back to Shopping Catalogue", :controller => :store %>

<br />
  </tr>

</table>
